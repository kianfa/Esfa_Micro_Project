        xmlns:local="clr-namespace:MiniProject"
        mc:Ignorable="d"
        Title="Esfa Corporation Micro Project - V0.0.1"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
