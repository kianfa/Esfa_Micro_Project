            </Grid.RowDefinitions>

            <TextBlock Text="TEXT"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Foreground="White"
            FontSize="22"
            Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1">
