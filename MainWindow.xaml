                        Height="50"
                        Foreground="white"
                        FontSize="14"
                        Style="{StaticResource MenuButtons}"/>

                <RadioButton Content="Home"
                        Height="50"
                        Foreground="white"
                        FontSize="14"
                        Style="{StaticResource MenuButtons}"/>

                <RadioButton Content="Home"
                        Height="50"
                        Foreground="white"
